<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<div class = "center">
  <table class = "table table-striped table-hover table-condensed">
  <thead>
      <tr>
        <th>店舗名</th>
        <th>表示順</th>
        <th>質問文</th>
        <th>回答方法</th>
        <th>選択肢</th>
        <th>必須</th>
        <th>表示</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.office.name %></td>
          <td><%= question.order %></td>
          <td><%= question.title %></td>
          <td><%= question.input_type %></td>
          <td><%= question.choices %></td>
          <td><%= '必須' if question.required %></td>
          <td><%= '非表示' unless question.display %></td>
          <td><%= link_to '編集', edit_question_path(question) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
